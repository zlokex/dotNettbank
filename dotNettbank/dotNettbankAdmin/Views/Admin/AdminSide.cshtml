
@model dotNettbankAdmin.Models.AdminSideModel

@{
    ViewBag.Title = "AdminSide";
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="~/Content/AdminSide.css">
    <script type="text/javascript" src="~/Scripts/AdminSide.js"></script>
</head>


<div >
    <div id="mySidenav" class="sidenav" style="width: 250px;">
        
            <a><img class="img-circle img-responsive img-center" style="height:150px; width:150px;" src="~/Content/img/adminIMG.png" alt=""></a>
            <!-- Kunder -->
            <h5><small><b>KUNDER</b></small></h5>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="#">Finn kunde</a></li>
                <li><a href="#">Endre kunde</a></li>
            </ul>

            <!-- Kontoer -->
            <h5><small><b>KONTOER</b></small></h5>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="javascript:void(0);" id="accounts_link">Finn konto</a></li>
                <!--<li><a href="#">Endre konto</a></li>-->
            </ul>

            <!-- Betalinger -->
            <h5><small><b>BETALINGER</b></small></h5>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="#">Finn betaling</a></li>
                <!--<li><a href="#">Endre betaling</a></li>-->
            </ul>

            <!-- Transaksjoner -->
            <h5><small><b>TRANSAKSJONER</b></small></h5>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="#">Finn transaksjon</a></li>
                <!--<li><a href="#">Endre transaksjon</a></li>-->
            </ul>
                          
            <a href="#">Admin</a>
            <a href="javascript:void(0);" class="getProducts" id="trans">Transaksjoner</a>
            <a href="#">Betalt</a>
            <a href="#">Noe annet</a>
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Skjul</a>
    </div>
    <div style="margin-top:20px;">
        <span style="font-size:20px;cursor:pointer" onclick="openNav()">&#9776; Meny</span>
    </div>
    <div id="main" style="margin-left:250px;">
        
        <h2>AdminSide</h2>
        Dette er admin siden nå som du har logget inn.

        <div id="productsPlace">
        </div>

        

        <div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Kro Production</p>
            </footer>
        </div>

    </div>
    
</div>



<script type="text/javascript">
    document.getElementById("accounts_link").onclick = function () { showAccounts() };

    function showAccounts() {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("Accounts","Admin")'
        }).done(function (result) {
            $('#productsPlace').html(result);
        })
    }



    document.getElementById("trans").onclick = function() {trans()};

    function trans() {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("RegBetalingsPartial","Admin")'}).done(function(result) {
                $('#productsPlace').html(result);
            })
    }
    
</script>
