@model List<dotNettbank.Model.Customer>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Kunder</h4>
    </div>
    <!-- SØKE FELT-->
    <div id="custom-search-input">
        <div class="input-group col-md-12">
            <input type="text" id="search" class="form-control input-lg" placeholder="Søk blant kunder..." />
            <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="button">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>

    <div class="panel-body">
        <!-- TABLE --> 
        <table class="table table-hover search-table">
            <thead class="thead-inverse">
                <tr>
                    <th>Fødselsnummer</th>
                    <th>Fornavn</th>
                    <th>Etternavn</th>
                    <th>Adresse</th>
                    <th>Telefonnummer</th>
                    <th>Endre</th>
                    <th>Deaktiver</th>
                    <th>Konto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
            {
                    <tr data-toggle="collapse" class="clickable">
                        <td class="col-md-2">@Html.DisplayFor(modelItem => c.BirthNo)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => c.FirstName)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => c.LastName)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => c.Address)</td>
                        <td class="col-md-1">@Html.DisplayFor(modelItem => c.PhoneNo)</td>
                        <td class="col-md-1"><button class="btn btn-info" id="edit_btn2" data-id="@c.BirthNo">Endre</button></td>
                        <td class="col-md-1"><button class="btn btn-danger" id="delete_btn" data-id="@c.BirthNo">Deaktiver</button></td>
                        <td class="col-md-1"><button class="btn btn-primary" id="show_accounts_btn" data-id="@c.BirthNo">Vis kontoer</button></td>

                        <!--<td class="col-md-1"><button class="btn btn-info" id="show_payments_btn">Betalinger</button></td>
                        <td class="col-md-1"><button class="btn btn-info" id="show_transactions_btn">Transaksjoner</button></td>-->
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="editor-container2" tabindex="-1"
     role="dialog" aria-labelledby="editor-title">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="editor-content-container2"></div>
    </div>
</div>

<script type="text/javascript">
    // DOCUMENT READY:
    $(document).ready(function () {
        // ENDRE BRUKER LISTENER:
        $(document).on('click', '#edit_btn2', function () {
            var birthNo = $(this).attr('data-id');
            $.ajax({
                url: '/Admin/GetEditCustomerPartial',
                type: 'GET',
                data: { birthNo: birthNo },
                success: function(data){
                    $('#editor-content-container2').html(data);
                    $('#editor-container2').modal('show');
                }
            });
        });

        // ENDRE KNAPP I MODAL LISTENER:
        $(document).on('click', '#update_btn', function () {
            var self = $(this);
            $.ajax({
                url: '/Admin/UpdateCustomer',
                type: 'POST',
                data: self.closest('form').serialize(),
                success: function(data) {
                    if (data.success == true) {
                        $('#editor-container').modal('hide');
                        $('#editor-content-container').html("");
                        // "Refresh _Accounts partial after modal is closed (inside here so that accounts is not refreshed on close)
                        $('#editor-container').on('hidden.bs.modal', function (e) {
                            showAccounts();
                        })
                    } else {
                        // If not succesful, reload modal with the partial/model from controller
                        $('#editor-content-container').html(data);
                    }
                }
            });
        });


    });
</script>

<script src="~/Scripts/AdminPartials.js"></script>


