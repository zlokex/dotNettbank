@model List<dotNettbank.Model.Account>



<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Kontoer</h4>
    </div>
    <!-- SØKE FELT-->
    <div id="custom-search-input">
        <div class="input-group col-md-12">
            <input type="text" id="search" class="form-control input-lg" placeholder="Søk blant kontoer..." />
            <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="button">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>

    <div class="panel-body">
        <!-- TABLE -->
        <table class="table table-hover search-table">
            <thead class="thead-inverse">
                <tr>
                    <th>Fødselsnummer</th>
                    <th>Kontonummer</th>
                    <th>Kontonavn</th>
                    <th>Saldo</th>
                    <th>Endre</th>
                    <th>Deaktiver</th>
                    <th>Tag</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr data-toggle="collapse" class="clickable">
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.OwnerBirthNo)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.AccountNo)</td>
                        <td class="col-md-4">@Html.DisplayFor(modelItem => item.Type)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.Balance)</td>
                        <td class="col-md-1"><button class="btn btn-default" id="edit_btn" data-id="@item.AccountNo">Endre</button></td>
                        <td class="col-md-1"><button class="btn btn-danger" id="delete_btn" data-id="@item.AccountNo">Deaktiver</button></td>
                        <td class="col-md-1"><button data-name="@Html.DisplayFor(modelItem => item.Type)" data-id="@Html.DisplayFor(modelItem => item.AccountNo)" class="btn btn-primary useraddtab"><i class="fa fa-tags" aria-hidden="true"></i>Tag</button></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<!-- ENDRE KONTO MODAL -->
<div class="modal fade" id="editor-container" tabindex="-1"
     role="dialog" aria-labelledby="editor-title">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="editor-content-container"></div>
    </div>
</div> 

<!-- SLETT KONTO MODAL -->
<div class="modal fade" id="delete-container" tabindex="-1"
     role="dialog" aria-labelledby="editor-title">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="delete-content-container">
            <!-- MODAL HEADER -->
            <div class="modal-header ">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Deaktiver konto</h3>
            </div>
            <!-- MODAL BODY -->
            <div class="modal-body">
                <div id="intial_message">
                    Er du sikker på at du ønsker å deaktivere denne kontoen?
                </div>
                <div id="error_message" class="text-danger">

                </div>
            </div>

            <!-- MODAL FOOTER -->
            <div class="modal-footer">
                <button class="btn btn-default" type="button" data-dismiss="modal">Avbryt</button>
                <button class="btn btn-danger" type="button" id="delete_modal_btn">Deaktiver</button>
            </div>

        </div>
    </div>
</div> 

<script type="text/javascript">
    // DOCUMENT READY:
    $(document).ready(function () {
        // ENDRE KONTO LISTENER:
        $(document).on('click', '#edit_btn', function () {
            $('#editor-container').off('hidden.bs.modal'); // Turn of hidden bs modal
            var accountNo = $(this).attr('data-id');
            $.ajax({
                url: '/Admin/GetEditAccountPartial',
                type: 'GET',
                data: { accountNo: accountNo },
                success: function(data){
                    $('#editor-content-container').html(data);
                    $('#editor-container').modal('show');
                }
            });
        });

        // ENDRE KNAPP I MODAL LISTENER:
        $(document).on('click', '#update_btn', function () {
            var self = $(this);
            $.ajax({
                url: '/Admin/UpdateAccount',
                type: 'POST',
                data: self.closest('form').serialize(),
                success: function(data) {
                    if (data.success == true) {
                        // Turn on hidden bs modal with refresh of partial
                        $('#editor-container').one('hidden.bs.modal', function (e) {
                            getPartial("Accounts");
                        })
                        $('#editor-container').modal('hide');
                        $('#editor-content-container').html("");
                        
                    } else {
                        
                        // If not succesful, reload modal with the partial/model from controller
                        $('#editor-content-container').html(data);
                    }
                }
            });
        });

        var accountNoToDelete;
        // DEAKTIVER KONTO LISTENER:
        $(document).on('click', '#delete_btn', function () {
            accountNoToDelete = $(this).attr('data-id');
            $('#delete-container').off('hidden.bs.modal'); // Turn off hidden bs modal
            $('#delete-container').modal('show'); // show modal
            // SLETT KNAPP I MODAL LISTENER:
            
        }); // End of deaktiver konto

        $('#delete_modal_btn').click(function () {
            var self = $(this);
            $.ajax({
                url: '/Admin/DeactivateAccount',
                type: 'POST',
                data: { accountNo: accountNoToDelete },
                success: function (data) {
                    if (data === "Suksess") {
                        // Turn on hidden bs modal with refresh of partial
                        $('#delete-container').on('hidden.bs.modal', function (e) {
                            getPartial("Accounts");
                        })
                        $('#delete-container').modal('hide');
                        $('#delete-content-container').html("");
                    } else {

                        $('#intial_message').html("");
                        $('#error_message').html(data);
                    }
                }
            });
        });
    }); // end of Document ready
</script>

<script src="~/Scripts/AdminPartials.js"></script>

