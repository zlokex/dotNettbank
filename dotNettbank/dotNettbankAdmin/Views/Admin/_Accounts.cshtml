@model List<dotNettbank.Model.Account>



<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Kontoer</h4>
    </div>
    <!-- SØKE FELT-->
    <div id="custom-search-input">
        <div class="input-group col-md-12">
            <input type="text" id="search" class="form-control input-lg" placeholder="Søk blant kontoer..." />
            <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="button">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>

    <div class="panel-body">
        <!-- TABLE -->
        <table class="table table-hover search-table">
            <thead class="thead-inverse">
                <tr>
                    <th>Fødselsnummer</th>
                    <th>Kontonummer</th>
                    <th>Kontonavn</th>
                    <th>Saldo</th>
                    <th>Endre</th>
                    <th>Slett</th>
                    <th>Tag</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr data-toggle="collapse" class="clickable">
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.OwnerBirthNo)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.AccountNo)</td>
                        <td class="col-md-4">@Html.DisplayFor(modelItem => item.Type)</td>
                        <td class="col-md-2">@Html.DisplayFor(modelItem => item.Balance)</td>
                        <td class="col-md-1"><button class="btn btn-default" id="edit_btn" data-id="@item.AccountNo">Endre</button></td>
                        <td class="col-md-1"><button class="btn btn-danger" id="delete_btn" data-id="@item.AccountNo">Slett</button></td>
                        <td class="col-md-1"><button data-name="@Html.DisplayFor(modelItem => item.Type)" data-id="@Html.DisplayFor(modelItem => item.AccountNo)" class="btn btn-primary useraddtab"><i class="fa fa-tags" aria-hidden="true"></i>Tag</button></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="editor-container" tabindex="-1"
     role="dialog" aria-labelledby="editor-title">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="editor-content-container"></div>
    </div>
</div> 

<script type="text/javascript">
    // DOCUMENT READY:
    $(document).ready(function () {
        // ENDRE KONTO LISTENER:
        $(document).on('click', '#edit_btn', function () {
            var accountNo = $(this).attr('data-id');
            $.ajax({
                url: '/Admin/GetEditAccountPartial',
                type: 'GET',
                data: { accountNo: accountNo },
                success: function(data){
                    $('#editor-content-container').html(data);
                    $('#editor-container').modal('show');
                }
            });
        });

        // ENDRE KNAPP I MODAL LISTENER:
        $(document).on('click', '#update_btn', function () {
            var self = $(this);
            $.ajax({
                url: '/Admin/UpdateAccount',
                type: 'POST',
                data: self.closest('form').serialize(),
                success: function(data) {
                    if (data.success == true) {
                        $('#editor-container').modal('hide');
                        $('#editor-content-container').html("");
                        // "Refresh _Accounts partial after modal is closed (inside here so that accounts is not refreshed on close)
                        $('#editor-container').on('hidden.bs.modal', function (e) {
                            showAccounts();
                        })
                    } else {
                        // If not succesful, reload modal with the partial/model from controller
                        $('#editor-content-container').html(data);
                    }
                }
            });
        });

            
    });
</script>

<script src="~/Scripts/AdminPartials.js"></script>

