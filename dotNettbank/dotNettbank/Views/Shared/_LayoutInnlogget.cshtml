<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - dotNettbank</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#logout_btn').click(function(event){
                event.stopPropagation();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Logout","Shared")',
                    success: function() {
                    },
                });
            });
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">dotNettbank</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="~/Customer/Overview">Totaloversikt</a></li>
                    
                    <li><a href="~/Customer/AccountStatement">Kontoutskrift</a></li>
                    
                    <li><a href="~/Customer/OpenAccount">Åpne konto</a></li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="">Betaling<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Customer/PaymentInsert">Betale</a></li>
                            <li><a href="~/Customer/Transfer">Overføre</a></li>
                            <li><a href="~/Customer/DuePayments">Forfallsoversikt</a></li>
                            <li><a href="~/Customer/PaymentReceipts">Utførte betalinger</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="" id="logout_btn" class="logout_btn"><span class="glyphicon glyphicon-log-in"></span> Logg ut</a></li>
                </ul>
            </div>  
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - dotNettbank</p>

        </footer>
    </div>    
</body>
</html>
