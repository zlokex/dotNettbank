@model dotNettbank.Models.regAccount
@{
    ViewBag.Title = "Opprett konto";
    Layout = "~/Views/Shared/_LayoutInnlogget.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Opprett Bankkonto</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-8" style="margin-bottom:20px;">
                        En brukskonto er en konto til daglige banktjenester med en rente på <strong>1,2%</strong>
                        <div style="margin-top:10px;">
                            <strong>Fordeler:</strong>
                            <p><span class="glyphicon glyphicon-piggy-bank" style="font-size:1.2em"></span>
                                Denne kontoen støtter mulighet for å knytte på et bankkort
                            </p>
                            <p>
                                <span class="glyphicon glyphicon-piggy-bank" style="font-size:1.2em"></span>
                                Du kan opprette så mange brukskontoer du trenger
                            </p>
                            <p>
                                <span class="glyphicon glyphicon-piggy-bank" style="font-size:1.2em"></span>
                                Du kan enkelt overføre penger mellom brukskontoene dine og til andre kontoer via nettbanken vår.
                            </p>

                        </div>
                        
                       
                    </div>
                    <div class="col-md-8">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-8" style="margin-bottom:15px;">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-8">
                    <input type="submit" value="Opprett konto" class="btn btn-success" />
                </div>

                <div class="col-md-8" style="margin-top:5px;">
                    @if (ViewBag.OpenAccount == false)
                    {
                        <p class="alert alert-success">Konto opprettet!</p>
                    }
                    @if (ViewBag.OpenAccount == true)
                    {
                        <p class="alert alert-danger">Konto kunne ikke bli opprettet!</p>
                    }
                </div>

            </div>
        </div>
    </div>

}
