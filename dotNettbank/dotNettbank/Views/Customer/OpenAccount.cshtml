
@{
    Layout = "~/Views/Shared/_LayoutInnlogget.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OpenAccount</title>
</head>
<body>

    <div class="panel-body" style="background-color:darkgray">
        <form class="form-horizontal" role="form">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.fornavn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fornavn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fornavn, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-9">
                    Opprett Brukskonto
                </div>

                <div class="col-sm-9">
                    Skriv inn navn på kontoen: <input id="Text1" type="text" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-success btn-md ">
                        Opprett
                    </button>
                </div>
            </div>

            <div class="form-group last">
                <div class="col-sm-12">
                    Dette er helt nederst.
                </div>
            </div>

        </form>
    </div>
    
</body>
</html>
